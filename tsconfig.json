{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "app",
    "lib"
  ],
  "exclude": [
    "test.ts",
    "tests",
    "**/*.test.ts",
    "dist"
  ]
}